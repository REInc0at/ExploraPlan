<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_home">

    <!-- Side Navigation -->

    <fragment
        android:id="@+id/navigation_plan"
        android:name="com.rein.exploraplan.ui.plan.PlanFragment"
        android:label="Itinerary Plan"
        tools:layout="@layout/fragment_plan" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.rein.exploraplan.ui.profile.ProfileFragment"
        android:label="User Profile"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/navigation_bookmarks"
        android:name="com.rein.exploraplan.ui.bookmarks.BookmarksFragment"
        android:label="Bookmarks"
        tools:layout="@layout/fragment_bookmarks" />

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.rein.exploraplan.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_itinerary"
        android:name="com.rein.exploraplan.ui.itinerary.ItineraryFragment"
        android:label="Itinerary"
        tools:layout="@layout/fragment_itinerary" />

    <fragment
        android:id="@+id/navigation_announcement"
        android:name="com.rein.exploraplan.ui.announcements.AnnouncementsFragment"
        android:label="Announcements"
        tools:layout="@layout/fragment_announcements" />

    <fragment
        android:id="@+id/navigation_budget"
        android:name="com.rein.exploraplan.ui.budget.BudgetFragment"
        android:label="Budget"
        tools:layout="@layout/fragment_budget" />

    <fragment
        android:id="@+id/_navigation_location"
        android:name="com.rein.exploraplan.ui.location.LocationFragment"
        android:label="Location"
        tools:layout="@layout/fragment_location" />
</navigation>